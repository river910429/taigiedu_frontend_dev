{
  "openapi": "3.0.3",
  "info": {
    "title": "taigiedu.com Frontend-Inferred API",
    "version": "0.1.0",
    "description": "Inferred from frontend fetch calls (VITE_API_URL)."
  },
  "servers": [
    {
      "url": "{apiBaseUrl}",
      "description": "Base URL aligned with VITE_API_URL",
      "variables": {
        "apiBaseUrl": {
          "default": "https://dev.taigiedu.com/backend"
        }
      }
    }
  ],
