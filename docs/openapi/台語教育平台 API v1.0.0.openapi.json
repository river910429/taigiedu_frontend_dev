    "/synthesize_speech": {
      "post": {
        "tags": [
          "TTS"
        ],
        "summary": "文字轉語音",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TtsRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Base64 audio (wav) string",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string",
                  "description": "Base64 audio content"
                }
              }
            }
          }
        }
      }
    },
